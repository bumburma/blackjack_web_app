<div class="page-header">
  <h1>Blackjack Online <small>Who needs Vegas?</small></h1>
</div>

<h4>Hi, <%= session[:player] %>.</h4>

<% if @play_again %>
  <p>
    <strong>Play again?</strong>
    <a href="/game" class = "btn btn-primary">Yes</a>
    <a href="/game_over" class = "btn">No</a>
  </p>
<% end %>

<div class="well">
  <h4>Dealer's cards:</h4>
  
  <% session[:dealer_cards].each_with_index do |card, i| %>
    <% if session[:turn] != 'dealer' && i == 0 %>
      <img src="/images/cards/cover.jpg">
    <% else %>
      <%= card_image(card) %>
    <% end %>
  <% end %>

  <% if @show_dealer_hit_button %>
    <p>
      <h5>The dealer has <%= calculate_total(session[:dealer_cards]) %> points and chooses to hit.</h5>
      
      <form action='/game/dealer/hit' method='post'>
        <input type='submit' class='btn btn-primary' value='Next card &rarr;'>
      </form>
    </p>
  <% end %>
</div>

<br/>

<div class="well">
  <h4>Your cards:</h4>
  <% session[:player_cards].each do |card| %>
    <%= card_image(card) %>
  <% end %>
</div>

<p>
  <p>You have <%= calculate_total(session[:player_cards]) %>.</p>
  <% if @show_buttons %>    
    <form id="hit_form" action="/game/player/hit" method='post'>
      <input type="submit" class="btn btn-primary btn-large" value="Hit"/>
    </form>

    <form id="stay_form" action="/game/player/stay" method='post'>
      <input type="submit" class="btn btn-large" value="Stay"/>
    </form>
  <% end %>
</p>
